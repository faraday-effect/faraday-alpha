type Course {
  id: Int! @id
  number: String!
  title: String!
  prefix: Prefix!
  department: Department!
  sections: [Section!]
}

type Department {
  id: Int! @id
  name: String!
  courses: [Course!]
  prefixes: [Prefix!]
}

type Holiday {
  id: Int! @id
  title: String!
  startDate: DateTime!
  endDate: DateTime!
  term: Term!
}

type Prefix {
  id: Int! @id
  value: String!
  courses: [Course!]
}

type Role {
  id: Int! @id
  title: String!
  description: String!
  users: [User!]
}

type Section {
  id: Int! @id
  title: String!
  regNumber: String!
  creditHours: Int!
  term: Term!
  course: Course!
}

type Term {
  id: Int! @id
  name: String!
  startDate: DateTime!
  endDate: DateTime!
  holidays: [Holiday!]
  sections: [Section!]!
}

type User {
  id: Int! @id
  email: String!
  password: String!
  firstName: String!
  lastName: String!
  officePhone: String
  mobilePhone: String
  roles: [Role!]
}

type QuizQuestion {
  id: Int! @id
  type: String!
  title: String!
  text: String!
  details: Json
}

type QuizResponse {
  id: Int! @id
  question: QuizQuestion!
  response: Json!
}
