  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:prod": "rimraf dist && yarn build",
    "format": "prettier --write \"src/**/*.ts\"",
    "serve": "ts-node -r tsconfig-paths/register src/main.ts",
    "serve:dev": "nodemon",
    "serve:debug": "nodemon --config nodemon-debug.json",
    "serve:prod": "node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:all": "yarn test && yarn test:e2e"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/graphql": "^6.0.5",
    "@nestjs/platform-express": "^6.0.0",
    "apollo-server-express": "^2.4.8",
    "class-validator": "^0.9.1",
    "graphql": "^14.2.1",
    "graphql-tools": "^4.0.4",
    "lodash": "^4.17.11",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "type-graphql": "^0.17.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@nestjs/typeorm": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/lodash": "^4.14.123",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "pg": "^7.9.0",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "typeorm": "^0.2.16",
    "typescript": "^3.2.4"
  }
}
